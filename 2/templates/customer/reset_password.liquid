{% layout settings.customer_layout %}
<h2 class="title">Reset Account Password</h2>
  <p class="note">Enter a new password for {{ email }}</p>
    {% form 'reset_customer_password' %}
      {{ form.errors | default_errors }}
      <div id="password">
        <label for="password">Password</label>
        <input type="password" value="" name="customer[password]" id="customer_password" class="large password" size="16" />
      </div>
      <div id="password_confirm">
        <label for="password_confirmation">Password Confirmation</label>
        <input type="password" value="" name="customer[password_confirmation]" id="customer_password_confirmation" size="16" />
      </div>
      <div class="action_bottom">
        <input class="btn" type="submit" value="Reset Password" />
      </div>
{% endform %}